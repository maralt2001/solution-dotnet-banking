@page "/login"
@inherits LoginBase



    <div class="container pt-3" style="width: 40%">
        <h2>Login</h2>
        <p>Enter your SignIn Credentials or <a class="nav-item" href="register">Register</a> a new user</p>

        <EditForm Model="@ApplicationUser" OnValidSubmit="@LoginUser">
            <DataAnnotationsValidator />
            <label for="user">Email: </label>
            <InputText class="form-control" id="user" type="email" @bind-Value="@ApplicationUser.email" placeholder="..." />
            <ValidationMessage For="@(() => ApplicationUser.email)" />
            <p />
            <label for="password">Password: </label>
            <InputText class="form-control" id="password" type="password" @bind-Value="@ApplicationUser.password" placeholder="..." />
            <ValidationMessage For="@(() => ApplicationUser.password)" />
            <button style="margin-top: 25px" type="submit" class="btn btn-primary">Submit</button>
        </EditForm>


        @if (UserState.IsLoggedIn == true && Init == false)
        {

            <div class="alert alert-success" style="margin-top:25px">
                <strong>Success!</strong> You are logged in successfully
            </div>

        }
        else if (UserState.IsLoggedIn == false && Init == false)
        {
            <div class="alert alert-danger" style="margin-top:25px">
                <strong>Error!</strong> You are not logged in
            </div>
        }


    </div>











